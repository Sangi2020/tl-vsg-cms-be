model Enquiries {
  id          String   @id @default(uuid())
  name        String
  phoneNumber String
  email       String
  message     String   @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      String   @default("unread")

  @@index([email])
  @@index([status])
  @@index([createdAt])
}

model CompanyInfo {
  id        String   @id @default(uuid())
  email     String
  phone     String
  address   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Newsletter {
  id               String   @id @default(uuid())
  email            String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  unSubscribeToken String   @unique
}
